#include <iostream>
using namespace std;


void f(int n) {
  
  if (n == 0) {
    cout << "***" << endl;
    cout << "* *" << endl;
    cout << "***" << endl;
  }

  else if (n > 0) {
    string space;
    string side;
    string bottom = "***";

    for (int i = 0; i < n; i++) {
      space += " ";
      side += "*";
    }
    bottom += side + side;

    cout << space << "***" << space << endl;
    cout << space << "*" << space << "*" << " " << endl;
    cout << bottom << endl;
    
    space = "";
    side = "";
    }
  
}



int main() {
  int level;

  cin >> level;
  f(level-1);
  

  return 0;
}
